  <section id="contact">

    <h1 class="section-header wow bounceInLeft">Get In Touch</h1>

    <div class="container">
      <div class="row">
        <div class="col-lg-8 wow fadeInUp">
          <!-- Left contact page -->
          <ajax-form action="deliverContactFormMessage" :form-errors.sync="formErrors" :form-data="formData" :form-rules="formRules" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()">
            <div class="form-group">
              <input class="form-control" name="full-name" type="text" :class="[formErrors.fullName ? 'is-invalid' : '']" v-model.trim="formData.fullName" placeholder="Name" autocomplete="name" focus-first>
              <div class="invalid-feedback" v-if="formErrors.fullName">Type here</div>
            </div>
            <div class="form-group">
              <input class="form-control mt-4" name="email-address" type="email" :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" placeholder="Email address" autocomplete="email">
              <div class="invalid-feedback" v-if="formErrors.emailAddress">Type here</div>
            </div>
            <div class="form-group">
              <input class="form-control mt-4" name="Phone" type="number" :class="[formErrors.topic ? 'is-invalid' : '']" v-model.trim="formData.topic" placeholder="Phone Number" autocomplete="none">
              <div class="invalid-feedback" v-if="formErrors.topic">Type here</div>
            </div>
            <div class="form-group">
              <textarea class="form-control mt-4" name="message" rows="8" cols="80" :class="[formErrors.message ? 'is-invalid' : '']" v-model.trim="formData.message" placeholder="Type here" autocomplete="none"></textarea>
              <div class="invalid-feedback" v-if="formErrors.message">Type here</div>
            </div>
            <cloud-error v-if="cloudError"></cloud-error>
            <div class="form-group">
              <ajax-button type="submit" :syncing="syncing" class="btn btn-dark btn-lg btn-block mt-4">Send enquiry</ajax-button>
            </div>
          </ajax-form>
        </div>
        <div class="col-lg-4">
          <ul class="contact-list">
            <li class="list-item wow bounceInRight"><i class="fa fa-map-marker fa-2x"><span class="contact-text place">
                  <br>
                  <br>
                  <p>No. 289/1/1, Temple Road,</p>
                  <p>Thalapathpitiya, Nugegoda</p>
                  <p>Sri Lanka</p>
                </span></i></li>
            <hr class="wow bounceInRight">
            <li class="list-item wow bounceInRight"><i class="fa fa-phone fa-2x"><span class="contact-text phone">
                  <br>
                  <br>
                  <a href="tel:1-212-555-5555" title="Give me a call">(+94) 777 004 306</a>
                </span></i></li>
            <hr class="wow bounceInRight">
            <li class="list-item wow bounceInRight"><i class="fa fa-envelope fa-2x"><span class="contact-text gmail">
                  <br>
                  <br>
                  <a href="mailto:#" title="Send me an email">lankasmartswitch@gmail.com</a></span>
              </i></li>

          </ul>

        </div>
      </div>
    </div>
    <br>
  </section>

  <div class="container-fluid map wow fadeInUp">
    <iframe class="w-100"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3961.2037820433875!2d79.92467241477256!3d6.8661666950382205!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNsKwNTEnNTguMiJOIDc5wrA1NSczNi43IkU!5e0!3m2!1sen!2slk!4v1634111088832!5m2!1sen!2slk"
      height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
  </div>

</div>
